# This tmux statusbar config was created by tmuxline.vim
# on Tue, 06 Sep 2016

set -g status-bg "colour0"
set -g message-command-fg "colour2"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g message-bg "colour0"
set -g status-right-length "160"
set -g status-right-attr "none"
set -g message-fg "colour2"
set -g message-command-bg "colour0"
set -g status-attr "none"
set -g pane-border-fg "colour15"
set -g pane-active-border-fg "colour7"
set -g pane-active-border-bg "colour0"
set -g pane-border-bg "colour0"
set -g status-left-attr "none"
setw -g window-status-fg "colour241"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour0"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour2"
setw -g window-status-separator ""
setw -g window-status-bg "colour0"
set -g status-left "#[fg=colour241,bg=colour0,bold] #S  #[fg=colour2,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#{prefix_highlight} #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics] #[fg=colour241] #(spotify) #(ipconfig getifaddr en0) | #(battery -a -p -t) #[fg=colour241]| %R - %d-%m-%Y"
setw -g window-status-format "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics] #[default] #W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics] #[fg=colour9,bg=colour0] #W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
